{
	"name": "perl-lsp",
	"description": "Perl language server",
	"author": "Linus Bj√∂rklund",
	"license": "MIT",
	"version": "1.0.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/weedz/vscode-perl-language-server"
	},
	"publisher": "linus-bjorklund",
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:perl"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Perl language server",
			"properties": {
				"perlLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"perlLanguageServer.ignoreFolders": {
					"scope": "window",
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Folders to exclude"
				},
				"perlLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"workspaces": [
		"client",
		"server"
	],
	"scripts": {
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"vscode:prepublish": "npm run esbuild-base && npm run terser",
		"esbuild-base": "esbuild extension=./client/src/extension.ts server=./server/src/server.ts --bundle --outdir=out --external:vscode --external:fsevents --format=cjs --platform=node",
		"terser": "terser out/extension.js --compress --mangle --module --output=out/extension.js && terser out/server.js --compress --mangle --module --output=out/server.js",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/node": "^16.11.27",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"esbuild": "^0.14.36",
		"eslint": "^8.10.0",
		"terser": "^5.12.1",
		"typescript": "^4.6.2"
	},
	"dependencies": {
		"chokidar": "^3.5.3"
	}
}
